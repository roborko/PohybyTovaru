<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_row_twoline_standard"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/detailView_Image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/padding_parent_layout"
        android:layout_marginRight="@dimen/padding_parent_layout"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true">

    </ImageView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/detailView_Image"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tovarDescription"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tovarnazovTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazov"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/aktualne_mnozstvo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:text="0"
                />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>